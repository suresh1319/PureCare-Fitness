<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PureCare Gym - Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        html, body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        body {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/bgimg.jpg');
            background-size: cover;
            background-position: center;
            padding: 20px;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            margin: auto;
        }

        .logo {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo h1 {
            color: #fff;
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .logo p {
            color: #bce3d7;
            font-size: 1rem;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #bce3d7;
        }

        .form-control {
            width: 100%;
            padding: 15px 15px 15px 45px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 30px;
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #bce3d7;
            box-shadow: 0 0 10px rgba(188, 227, 215, 0.3);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .btn {
            width: 100%;
            padding: 15px;
            background: #bce3d7;
            border: none;
            border-radius: 30px;
            color: #000;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn:hover {
            background: #9fd1c2;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .btn:active {
            transform: translateY(0);
        }

        .links {
            margin-top: 20px;
            text-align: center;
        }

        .links a {
            color: #bce3d7;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: inline-block;
            margin: 0 10px;
        }

        .links a:hover {
            color: #fff;
            transform: translateY(-2px);
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 20px 0;
            color: rgba(255, 255, 255, 0.5);
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .divider span {
            padding: 0 10px;
        }

        .social-login {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .social-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 1.2rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .social-btn:hover {
            background: #bce3d7;
            color: #000;
            transform: translateY(-3px);
        }

        @media (max-width: 480px) {
            .login-container {
                padding: 30px 20px;
            }

            .logo h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">
            <h1>PureCare Gym</h1>
            <p>Transform Your Body, Transform Your Life</p>
        </div>

        <form action="/login" method="POST">
            <div class="form-group">
                <i class="fas fa-envelope"></i>
                <input type="email" class="form-control" placeholder="Email" name="email" required>
            </div>

            <div class="form-group">
                <i class="fas fa-lock"></i>
                <input type="password" class="form-control" placeholder="Password" name="password" required>
            </div>

            <button type="submit" class="btn">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>
        </form>

        <div class="links">
            <a href="/forgot-password">Forgot Password?</a>
            <a href="/register">Create Account</a>
        </div>

        <div class="divider">
            <span>or continue with</span>
        </div>

        <div class="social-login">
            <button class="social-btn" onclick="handleGoogleLogin()">
                <i class="fab fa-google"></i>
            </button>
            <button class="social-btn" onclick="handleFacebookLogin()">
                <i class="fab fa-facebook-f"></i>
            </button>
            <button class="social-btn" onclick="handleAppleLogin()">
                <i class="fab fa-apple"></i>
            </button>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const socialBtns = document.querySelectorAll('.social-btn');

            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const submitBtn = this.querySelector('button');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Logging in...';
                
                setTimeout(() => {
                    console.log('Login attempt');
                }, 1500);
            });

            socialBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 200);
                });
            });
        });

        function handleGoogleLogin() {
            // Google OAuth implementation
            const googleAuthUrl = 'https://accounts.google.com/o/oauth2/v2/auth';
            const params = {
                client_id: 'YOUR_GOOGLE_CLIENT_ID',
                redirect_uri: 'http://localhost:3001/auth/google/callback',
                response_type: 'code',
                scope: 'email profile',
                state: 'random_state_string'
            };
            const url = `${googleAuthUrl}?${new URLSearchParams(params)}`;
            window.location.href = url;
        }

        function handleFacebookLogin() {
            // Facebook OAuth implementation
            const facebookAuthUrl = 'https://www.facebook.com/v12.0/dialog/oauth';
            const params = {
                client_id: 'YOUR_FACEBOOK_APP_ID',
                redirect_uri: 'http://localhost:3001/auth/facebook/callback',
                scope: 'email,public_profile',
                state: 'random_state_string'
            };
            const url = `${facebookAuthUrl}?${new URLSearchParams(params)}`;
            window.location.href = url;
        }

        function handleAppleLogin() {
            // Apple OAuth implementation
            const appleAuthUrl = 'https://appleid.apple.com/auth/authorize';
            const params = {
                client_id: 'YOUR_APPLE_SERVICE_ID',
                redirect_uri: 'http://localhost:3001/auth/apple/callback',
                response_type: 'code',
                scope: 'email name',
                state: 'random_state_string'
            };
            const url = `${appleAuthUrl}?${new URLSearchParams(params)}`;
            window.location.href = url;
        }
    </script>
</body>
</html> 